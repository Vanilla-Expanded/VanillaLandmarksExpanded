<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>VEE_ColossalFauna</defName>
		<label>colossal animal</label>
		<description>This animal is larger than usual.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>120000~120000</disappearsAfterTicks>
				<showRemainingTime>false</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<statFactors>
					<VEF_BodySize_Multiplier>1.5</VEF_BodySize_Multiplier>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VEE_Microfauna</defName>
		<label>microfauna</label>
		<description>This animal is smaller than usual.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>120000~120000</disappearsAfterTicks>
				<showRemainingTime>false</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<statFactors>
					<VEF_BodySize_Multiplier>0.5</VEF_BodySize_Multiplier>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VEE_RottenStench</defName>
		<label>rotten stench</label>
		<description>Acrid vapors seep from the ground, blanketing the area in a foul smell that burns the lungs and sours the mood.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
		<defaultLabelColor>(0.52, 1, 0.95)</defaultLabelColor>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>120000~120000</disappearsAfterTicks>
				<showRemainingTime>false</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef>
		<defName>VEE_DustStorm</defName>
		<label>affected by dust storm</label>
		<makesSickThought>false</makesSickThought>
		<description>A dust storm is making vision practically impossible in this region.</description>
		<tendable>false</tendable>
		<isBad>false</isBad>
		<defaultLabelColor>(92,62,198)</defaultLabelColor>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="VEF.Cooking.HediffCompProperties_WhileHavingThoughts">
				<thoughtDefs>
					<li>VEE_DustStorm</li>
				</thoughtDefs>
			</li>
		</comps>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>
