<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<WeatherDef>
		<defName>VEE_FertileRains</defName>
		<label>fertile rain</label>
		<description>Unusually nutrient-rich rainfall is sweeping across the region, boosting plant growth for its duration.</description>
		<overlayClasses>
			<li>VEF.Weathers.WeatherOverlay_Custom</li>
		</overlayClasses>
		<windSpeedFactor>1.5</windSpeedFactor>
		<accuracyMultiplier>0.8</accuracyMultiplier>
		<favorability>Neutral</favorability>
		<perceivePriority>1</perceivePriority>
		<weatherThought>SoakingWet</weatherThought>
		<rainRate>1</rainRate>
		<moveSpeedMultiplier>0.9</moveSpeedMultiplier>
		<modExtensions>
			<li Class="VEF.Weathers.WeatherOverlayExtension">
				<overlayPath>Weather/FertileRainWorldOverlay</overlayPath>
				<copyPropertiesFrom>Weather/RainOverlayWorld</copyPropertiesFrom>
				<worldOverlayPanSpeed1>0.015</worldOverlayPanSpeed1>
				<worldPanDir1>(-0.25, -1)</worldPanDir1>
				<worldOverlayPanSpeed2>0.022</worldOverlayPanSpeed2>
				<worldPanDir2>(-0.24, -1)</worldPanDir2>
			</li>
		</modExtensions>
		<ambientSounds>
			<li>Ambient_Rain</li>
		</ambientSounds>
		<commonalityRainfallFactor>
			<points>
				<li>(0, 0)</li>
				<li>(1300, 1)</li>
				<li>(4000, 3.0)</li>
			</points>
		</commonalityRainfallFactor>
