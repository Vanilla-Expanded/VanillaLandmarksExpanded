<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThoughtDef>
		<defName>VEE_SulfuricWater</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>1</stackLimit>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>sulfuric water</label>
				<description>The rotten egg smell of this rancid water in unbearable.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>VEE_RottenStench</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>VEE_RottenStench</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>rotten stench</label>
				<description>The whole region stinks.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>VEE_IrradiatedWater</defName>
		<durationDays>2</durationDays>
		<stackLimit>1</stackLimit>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>irradiated water</label>
				<description>I can feel my cells screaming in pain.</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>VEE_DustStorm</defName>
		<durationDays>0.1</durationDays>
		<stackLimit>1</stackLimit>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<nullifyingPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">RoughLiving_Welcomed</li>
		</nullifyingPrecepts>
		<stages>
			<li>
				<label>dust storm</label>
				<description>This dust gets everywhere!</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
		<thoughtClass>VEF.Cooking.Thought_Hediff</thoughtClass>
		<hediff>VEE_DustStorm</hediff>
	</ThoughtDef>
	<ThoughtDef>
		<defName>VEE_Quicksand</defName>
		<durationDays>0.005</durationDays>
		<stages>
			<li>
				<label>traversing quicksand</label>
				<description>It's like moving through molasses...</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>