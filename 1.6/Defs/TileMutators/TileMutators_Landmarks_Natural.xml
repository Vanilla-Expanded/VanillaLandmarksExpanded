<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<TileMutatorDef>
		<defName>VEE_MeteorCrater</defName>
		<label>meteor crater</label>
		<description>A vast impact site with jagged rocky edges and a debris-littered basin.</description>
		<categories>
			<li>Mountain</li>
		</categories>
		<priority>5</priority>
		<workerClass>VanillaExplorationExpanded.TileMutatorWorker_Crater</workerClass>
		<genOrder>-200</genOrder>
		<!-- Must be before any mutators that generate caves -->
		<maxHilliness>Flat</maxHilliness>
		<coastSidesRange>0~0</coastSidesRange>
		<biomeBlacklist>
			<li>SeaIce</li>
			<li>IceSheet</li>
		</biomeBlacklist>
	</TileMutatorDef>
