<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<TileMutatorDef>
		<defName>VEE_NoWind</defName>
		<label>no wind</label>
		<description>Winds are virtually absent in this region.</description>
		<categories>
			<li>Weather</li>
			<li>VEE_Windy</li>
		</categories>
		<workerClass>TileMutatorWorker_IncreaseWeatherFrequency</workerClass>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
		<weathersToAffect>
			<li>Windy</li>
		</weathersToAffect>
		<weatherFrequencyOffset>0</weatherFrequencyOffset>
		<additionalGameConditions>
			<li>VEE_NoWind</li>
		</additionalGameConditions>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_RagingWind</defName>
		<label>raging winds</label>
		<description>Winds are extraordinarily stronger in this area.</description>
		<categories>
			<li>Weather</li>
			<li>VEE_Windy</li>
		</categories>
		<workerClass>TileMutatorWorker_IncreaseWeatherFrequency</workerClass>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
		<weathersToAffect>
			<li>Windy</li>
		</weathersToAffect>
		<weatherFrequencyOffset>10</weatherFrequencyOffset>
		<additionalGameConditions>
			<li>VEE_RagingWind</li>
		</additionalGameConditions>
		<biomeWhitelist>
			<li>AridShrubland</li>
			<li>Desert</li>
			<li>ExtremeDesert</li>
			<li>IceSheet</li>
			<li>SeaIce</li>
			<li>Tundra</li>
			<li>Grasslands</li>
			<li>GlacialPlain</li>
			<li>LavaField</li>
			<li>Scarlands</li>
		</biomeWhitelist>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_GeomagneticStorm</defName>
		<label>geomagnetic storm</label>
		<description>An intense geomagnetic event blankets the region, completely disabling all electrical devices.</description>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
		<additionalGameConditions>
			<li>VEE_GeomagneticStorm</li>
		</additionalGameConditions>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_SkygazingSpot</defName>
		<label>skygazing spot</label>
		<description>A serene atmospheric phenomenon encourages colonists to spend more time gazing at the sky. Increases the chance of skygazing and boosts the joy it provides.</description>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
		<additionalGameConditions>
			<li>VEE_SkygazingSpot</li>
		</additionalGameConditions>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_TornadoAlley</defName>
		<label>tornado alley</label>
		<description>Frequent and intense tornadoes sweep through this region, threatening the colony.</description>
		<chanceOnNonLandmarkTile>0.02</chanceOnNonLandmarkTile>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_Sandstorms</defName>
		<label>sandstorms</label>
		<description>Sandstorms are much more frequent in this area.</description>
		<categories>
			<li>Weather</li>
		</categories>
		<workerClass>TileMutatorWorker_IncreaseWeatherFrequency</workerClass>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
		<weathersToAffect>
			<li>Sandstorm</li>
		</weathersToAffect>
		<weatherFrequencyOffset>10</weatherFrequencyOffset>
		<biomeWhitelist>
			<li>AridShrubland</li>
			<li>Desert</li>
			<li>ExtremeDesert</li>
			<li>Grasslands</li>
			<li>TemperateForest</li>
			<li>TemperateSwamp</li>
			<li>TropicalRainforest</li>
			<li>TropicalSwamp</li>
		</biomeWhitelist>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_RottenStench</defName>
		<label>rotten stench</label>
		<description>Acrid vapors seep from the ground, blanketing the area in a foul smell that burns the lungs and sours the mood.</description>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
		<additionalGameConditions>
			<li>VEE_RottenStench</li>
		</additionalGameConditions>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_FertileRains</defName>
		<label>fertile rains</label>
		<description>This region is subject to unusually nutrient-rich rainfall, boosting plant growth for its duration.</description>
		<chanceOnNonLandmarkTile>0.05</chanceOnNonLandmarkTile>
		<biomeBlacklist>
			<li>Grasslands</li>
		</biomeBlacklist>
	</TileMutatorDef>
	<TileMutatorDef>
		<defName>VEE_DustStorms</defName>
		<label>dust storms</label>
		<description>Dust storms that impede vision are much stronger in this area.</description>
		<categories>
			<li>Weather</li>
		</categories>
		<workerClass>TileMutatorWorker_IncreaseWeatherFrequency</workerClass>
		<chanceOnNonLandmarkTile>0.01</chanceOnNonLandmarkTile>
