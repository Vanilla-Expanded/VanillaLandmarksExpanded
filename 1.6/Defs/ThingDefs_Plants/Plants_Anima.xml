  <!--============================ Trees ============================-->

  <ThingDef ParentName="DeciduousTreeBase">
    <defName>VEE_Plant_YoungAnimaTree</defName>
    <label>lesser anima tree</label>
    <description>A small anima-touched tree. It lacks the psychic potency of a true anima tree, but still hums faintly with psychic life.</description>
    <graphicData>
      <texPath>Things/Plant/AnimaSapling</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.2, 0.35, 0.13)</volume>
        <offset>(-0.03,0,-0.44)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
    </statBases>
    <plant>
      <growDays>30</growDays>
      <harvestWork>1400</harvestWork>
      <harvestYield>46</harvestYield>
      <wildClusterWeight>35</wildClusterWeight>
    </plant>
  </ThingDef>
  
