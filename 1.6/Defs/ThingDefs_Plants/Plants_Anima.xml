<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================ Flowers =============================-->
	<ThingDef ParentName="PlantBase">
		<defName>VEE_Plant_AnimaBell</defName>
		<label>anima bell</label>
		<description>Clumps of vines that burst through the soil to bloom into beautiful flowers. Believed to be part of great collective roots that spread deep under the terrain which occasionally breach the surface to pollinate. The attractive qualities of the flowers encourage humans not to remove them.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<Nutrition>0.18</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/AnimaBell</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowOrSandDepth>0.5</hideAtSnowOrSandDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<maxMeshCount>4</maxMeshCount>
			<fertilityMin>0.05</fertilityMin>
			<visualSizeRange>0.7~0.8</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>200</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<ThingDef ParentName="PlantBase">
		<defName>VEE_Plant_MysticCap</defName>
		<label>mystic cap</label>
		<description>A small, vividly colored mushroom with a faintly iridescent cap. Can be harvested for raw fungus.</description>
		<descriptionHyperlinks>
			<ThingDef>RawFungus</ThingDef>
		</descriptionHyperlinks>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>2</Beauty>
			<Nutrition>0.35</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MysticCap</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<pathCost>10</pathCost>
		<ingestible/>
		<plant>
			<fertilityMin>0.01</fertilityMin>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>10</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestYield>10</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<maxMeshCount>4</maxMeshCount>
			<neverBlightable>true</neverBlightable>
			<visualSizeRange>0.4~0.7</visualSizeRange>
			<topWindExposure>0</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>5</wildClusterWeight>
			<mustBeWildToSow>true</mustBeWildToSow>
			<purpose>Food</purpose>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<wildOrder>1</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>
