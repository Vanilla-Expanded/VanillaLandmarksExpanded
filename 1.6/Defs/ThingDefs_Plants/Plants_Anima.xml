				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>-5</Beauty>
			<BeautyOutdoors>0</BeautyOutdoors>
		</statBases>
		<ingestible/>
		<plant>
			<growDays>28</growDays>
			<visualSizeRange>1.3~3.0</visualSizeRange>
			<harvestWork>800</harvestWork>
			<harvestYield>8</harvestYield>
		</plant>
	</ThingDef>
</Defs>
